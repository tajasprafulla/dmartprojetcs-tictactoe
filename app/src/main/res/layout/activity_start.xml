<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/game_bg"
    tools:context=".OnlineMode.startGameActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.2"
        android:orientation="horizontal"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:backgroundTint="#3408F4"
        android:text=""
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="@+id/guideLine1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="30dp"
         />

    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:backgroundTint="#3408F4"
        android:textColor="@color/white"
        android:text=""
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/guideLine1"
        app:layout_constraintLeft_toRightOf="@id/button1"
        android:textSize="30dp"
         />

    <Button
        android:id="@+id/button3"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:backgroundTint="#3408F4"
        android:textColor="@color/white"
        android:text=""
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/guideLine1"
        app:layout_constraintLeft_toRightOf="@id/button2"
        android:textSize="30dp"
         />

    <Button
        android:id="@+id/button4"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:backgroundTint="#3408F4"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text=""
        android:textSize="30dp"
         />

    <Button
        android:id="@+id/button5"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:backgroundTint="#3408F4"
        android:textColor="@color/white"
        android:text=""
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintLeft_toRightOf="@id/button4"
        android:textSize="30dp"
         />

    <Button
        android:id="@+id/button6"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:backgroundTint="#3408F4"
        android:textColor="@color/white"
        android:text=""
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintLeft_toRightOf="@id/button5"
        android:textSize="30dp"
         />

    <Button
        android:id="@+id/button7"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:backgroundTint="#3408F4"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text=""
        android:textSize="30dp"
        />

    <Button
        android:id="@+id/button8"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:backgroundTint="#3408F4"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintLeft_toRightOf="@id/button7"
        android:text=""
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
         />

    <Button
        android:id="@+id/button9"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:backgroundTint="#3408F4"
        android:textColor="@color/white"
        android:text=""
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintLeft_toRightOf="@id/button8"
        android:textSize="30dp"
         />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/generate2"
        android:layout_width="209dp"
        android:layout_height="54dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/save"
        android:fontFamily="@font/alegreya_black"
        android:text="Reset"
        app:layout_constraintBottom_toTopOf="@+id/generate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_edit" />

    <Button
        android:id="@+id/generate"
        android:layout_width="209dp"
        android:layout_height="54dp"
        android:text="Exit"
        android:background="@drawable/save"
        android:fontFamily="@font/alegreya_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <EditText
        android:id="@+id/answer_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="#F8F5F5"
        app:layout_constraintTop_toBottomOf="@+id/clGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>